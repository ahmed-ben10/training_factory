{% extends 'admin/admin_base.html.twig' %}

{% block main %}
    <div class="container">
        {% for msg in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ msg }}
            </div>
        {%  endfor %}
        <div class="table-responsive-sm">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Voornaam</th>
                    <th scope="col">Tussenvoegsel</th>
                    <th scope="col">Achternaam</th>
                    <th scope="col">Details</th>
                    <th scope="col">Actief</th>
                </tr>
                </thead>
                <tbody>
                    {% for lid in leden %}
                        <tr>
                            <td>{{ lid.person.firstname }}</td>
                            <td>{{ lid.person.preprovision }}</td>
                            <td>{{ lid.person.lastname }}</td>
                            <td><a href="{{ path('admin_leden_details',{lid:lid.id}) }}">Details</a></td>

                            {% if  lid.disabled == 1  %}
                                <td><a href="{{ path('admin_leden_wijzig_disabled',{lid:lid.id}) }}"><i class="fas fa-check"></i></a></td>
                            {% else %}
                                <td><a href="{{ path('admin_leden_wijzig_disabled',{lid:lid.id}) }}"><i class="fas fa-times"></i></a></td>
                            {% endif %}                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}