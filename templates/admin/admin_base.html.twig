{% extends 'base.html.twig' %}

    {% block nav %}
        <div class="w-100 d-none d-xl-block d-lg-block">
            <div class="row w-100">
                <div class="col-lg-9 ">
                    <img class="w-50" src="{{ asset('img/logo.png') }}" alt="Logo">
                </div>
                <div class="col-lg-3 d-flex">
                    <div class="ml-auto mb-2">
                        <p class="text-danger mb-2 pb-0 mb-0">Welkom {{ app.user.username }}</p>
                        <p class="text-danger mb-2 pb-0 mb-0">-Administratie-</p>
                        <a href="{{ path('app_logout') }}" class="text-white"><button type="submit" class="btn btn-danger ">Uitloggen</button></a>
                    </div>
                </div>
            </div>
            <hr class="bg-danger m-0">
        </div>
        <div class="w-100 d-xl-none d-lg-none">
            <div class="row w-100">
                <div class="col-lg-9 mb-3">
                    <img class="w-50" src="{{ asset('img/logo.png') }}" alt="Logo">
                </div>
                <div class="col-lg-3 d-flex mb-3">
                    <form action="" method="post" class="m-auto w-100 mb-2">
                        <p class="text-danger mb-2 pb-0 mb-0">Welkom {{ app.user.username }}</p>
                        <p class="text-danger mb-2 pb-0 mb-0">-Administratie-</p>
                        <a href="{{ path('app_logout') }}" class="w-100"><button type="submit" class="btn btn-danger text-white w-100 ">Uitloggen</button></a>
                    </form>
                </div>
            </div>
            <hr class="bg-danger m-0">
        </div>
        <nav class="navbar navbar-expand-lg p-0 navbar-light">
            <button class="navbar-toggler bg-danger ml-auto my-2" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-line text-danger {{ (page_name == 'admin_home')?'active':'' }} "
                           href={{ path('admin_home') }}>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-line text-danger {{ (page_name == 'admin_instucteurs')?'active':'' }} "
                           href={{ path('admin_instucteurs') }}>Instructeurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-line text-danger {{ (page_name == 'admin_leden')?'active':'' }} "
                           href={{ path('admin_leden') }}>Leden</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-line text-danger {{ (page_name == 'admin_trainingen')?'active':'' }} "
                           href={{ path('admin_trainingen') }}>Trainingen</a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endblock %}
    {% block header %}
<div class="w-100 border border-secondary mb-5">
    <div class="d-none d-xl-block">
        <div class="row w-100 m-0 mt-1 mb-3">
            <div class="col-md-4 mb-2">
                <img src="{{ asset('img/foto_1.png') }}" class="image-slide" alt="foto_1">
            </div>
            <div class="col-md-4 mb-2">
                <img src="{{ asset('img/foto_2.png') }}" class="image-slide" alt="foto_1">
            </div>
            <div class="col-md-4 mb-2">
                <img src="{{ asset('img/foto_3.png') }}" class="image-slide" alt="foto_1">
            </div>
        </div>
    </div>
    <div class="d-xl-none">
        <div class="row w-100 m-0 mt-1 mb-3">
            <div class="col-xl-12 mb-2">
                <img src="{{ asset('img/foto_1.png') }}" class="image-slide" alt="foto_1">
            </div>
        </div>
    </div>
    {% endblock %}
    {% block main %}{% endblock %}
    {% block footer %}
</div>
    <footer class="fixed-bottom w-100 p-1 bg-secondary text-center">
        <p class="text-danger">Training Centrum Den Haag 010 519 0532</p>
        <small class="text-white">developed bij FastDevelopment 2019</small>
    </footer>
{% endblock %}


